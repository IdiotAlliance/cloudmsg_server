<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg_blue"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/have_unread"
        android:layout_width="6dp"
        android:layout_height="70dp"
        android:background="@drawable/have_unread"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginTop="7dp" >

            <TextView
                android:id="@+id/msglist_item_tv_comfrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="陆文彬"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/msglist_item_tv_msgcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/msglist_item_tv_comfrom"
                android:text="(20)"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/msglist_item_error_img"
                android:layout_width="4dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/msglist_item_tv_msgcount"
                android:background="@drawable/error"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/msglist_item_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text="10-25"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="3dp" >

            <TextView
                android:id="@+id/msglist_item_tv_lastmsg"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="我的身份证给吕翔啦"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/msglist_item_msg_img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/msg"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/msglist_item_tv_newmsg"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:text="1"
                    android:textColor="@color/msg_blue"
                    android:textSize="16sp"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/msglist_item_call_img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/call"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/msglist_item_tv_newcall"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:text="99"
                    android:textColor="@color/call_red"
                    android:textSize="16sp"
                    android:visibility="invisible" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>