<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:background="@drawable/list_item_bg_blue" >
    <ImageView 
        android:id="@+id/simple_multi_choice_checkbox"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
	    android:padding="9dp"
        />
    <ImageView 
        android:id="@+id/contact_top_span1"
        android:layout_width="1dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/list_span_vertical" 
        />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="3dp"
	    >
	    <TextView 
	        android:id="@+id/simple_multi_choice_name"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:textColor="@color/black"
	        android:textSize="18sp"
	        android:text="陆文彬"
	        android:gravity="center_vertical"
	        android:layout_marginLeft="16dp"
	        />
	    <TextView 
	        android:id="@+id/simple_multi_choice_number"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
            android:textColor="@color/dark_gray"
	        android:gravity="center_vertical"
	        android:text="15298387110"
	        android:textSize="14sp"
	        android:layout_marginLeft="16dp"
	        />
	</LinearLayout>
</LinearLayout>