<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conv_function_frame"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/light_blue_bottombar"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <com.dt.cloudmsg.component.ImageBtSingle
        android:id="@+id/conv_function_send_message"
        android:layout_width="48dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_top"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/conv_function_span"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/conv_function_send_message"
        android:background="@drawable/button_span_vertical" />

    <EditText
        android:id="@+id/conv_function_message_txt"
        style="@style/edittext_style2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@id/conv_function_span"
        android:lines="2"
        android:textSize="16sp" />

</RelativeLayout>