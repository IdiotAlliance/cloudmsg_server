<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:background="@drawable/list_item_bg_blue"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/simple_multi_choice_group_checkbox"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="5"
        android:orientation="vertical"
        android:paddingLeft="5dp" >

        <TextView
            android:id="@+id/simple_multi_choice_group_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/simple_multi_choice_group_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/simple_multi_choice_group_indicator"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1" />

</LinearLayout>